root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[*.ttl]
indent_style = space
trim_trailing_whitespace = false
indent_size = 2

[Makefile]
indent_style = tab
