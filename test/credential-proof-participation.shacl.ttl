@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix tst: <https://w3id.org/axone/ontology/test/> .
@prefix schema: <http://schema.org/> .
@prefix proof: <https://w3id.org/axone/ontology/v$major/schema/credential/proof/participation/> .

# Test: ProofOfParticipationCredential class must be properly defined
tst:ProofOfParticipationCredentialClassShape a sh:NodeShape ;
  sh:targetNode proof:ProofOfParticipationCredential ;
  sh:property [
    sh:path rdf:type ;
    sh:hasValue rdfs:Class ;
    sh:minCount 1 ;
    sh:message "ProofOfParticipationCredential must be defined as an rdfs:Class."@en ;
  ] ;
  sh:property [
    sh:path rdfs:label ;
    sh:minCount 1 ;
    sh:message "ProofOfParticipationCredential must have at least one rdfs:label."@en ;
  ] ;
  sh:property [
    sh:path rdfs:comment ;
    sh:minCount 1 ;
    sh:message "ProofOfParticipationCredential must have at least one rdfs:comment describing its purpose."@en ;
  ] .

# Test: participatedIn property must be properly defined
tst:ParticipatedInPropertyShape a sh:NodeShape ;
  sh:targetNode proof:participatedIn ;
  sh:property [
    sh:path rdf:type ;
    sh:hasValue rdf:Property ;
    sh:minCount 1 ;
    sh:message "participatedIn must be defined as an rdf:Property."@en ;
  ] ;
  sh:property [
    sh:path rdfs:label ;
    sh:minCount 1 ;
    sh:message "participatedIn must have at least one rdfs:label."@en ;
  ] ;
  sh:property [
    sh:path rdfs:comment ;
    sh:minCount 1 ;
    sh:message "participatedIn must have at least one rdfs:comment describing its purpose."@en ;
  ] ;
  sh:property [
    sh:path schema:domainIncludes ;
    sh:hasValue proof:ProofOfParticipationCredential ;
    sh:minCount 1 ;
    sh:message "participatedIn must have ProofOfParticipationCredential in its schema:domainIncludes."@en ;
  ] ;
  sh:property [
    sh:path schema:rangeIncludes ;
    sh:hasValue schema:Event ;
    sh:minCount 1 ;
    sh:message "participatedIn must have schema:Event in its schema:rangeIncludes."@en ;
  ] .
